<Application x:Class="CloudChat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!--Order is important-->
                <ResourceDictionary Source="pack://application:,,,/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Buttons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Texts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Scroll.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/VectorIcons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/DefaultBitmapImages.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/ContextMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
